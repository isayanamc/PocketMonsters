<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pocket Monsters</title>
    <link rel="icon" href="../public/images/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="../public/css/headerStyle.css">
    <link rel="stylesheet" href="../public/css/ingresar.css">
    <script src="../public/js/ingresar.js"></script>
</head>

<body>
    <%- include('header') %>
        <div class="divInputs">
            <div class="mainIngresar" id="mainIngresar">
                <div class="tituloRegistro">
                    <h3>Inicio de sesión</h3>
                </div>
                <div class="columnas">
                    <div class="divCentrar">
                        <label for="Email">Email:</label>
                    </div>
                    <div class="divCentrar">
                        <input type="text" name="" id="Email" class="inputIngresar">
                    </div>
                </div>
                <div class="columnas">
                    <div class="divCentrar">
                        <label for="Contraseña ">Contraseña:</label>
                    </div>
                    <div class="divCentrar">
                        <input type="password" name="" id="contra" class="inputIngresar">
                    </div>
                </div>
                <div>
                    <button type="submit" id="ingresar">Iniciar Sesión</button>
                </div>
                <a href="/recuperarcontrasena">¿Olvidaste tu contraseña?</a>
                <div id="failDiv"></div>
            </div>
        </div>

</body>
</html>